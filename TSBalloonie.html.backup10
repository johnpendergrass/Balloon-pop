      function saveStatistics() {
        const stats = {
          totalBalloonsPopped: totalBalloonsPopped,
          totalStreaks: totalStreaks,
          totalTimePlayed:
            parseInt(localStorage.getItem("balloonGameTotalTime") || "0") +
            Math.floor(cumulativeTime / 1000),
